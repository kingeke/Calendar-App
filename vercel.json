{
    "version": 2,
    "framework": null,
    "builds": [
        { "src": "public/**/*", "use": "@vercel/static" },
        {
            "src": "resources/js/**",
            "use": "@vercel/static-build",
            "config": { "useOutputDirectory": true, "distDir": "public/js" }
        }
    ],
    "routes": [
        {
            "src": "/(css|js|lib)/(.*)",
            "dest": "public/$1/$2"
        },
        {
            "src": "/build/(.*)",
            "dest": "/build/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ],
    "env": {
        "APP_ENV": "local",
        "APP_DEBUG": "true",
        "APP_VERCEL": "true",
        "APP_KEY": "base64:2JTe2cU6Pyv5uQYkg/j5B0T8XLEkGCdHm3bPFZ8B11Y=",
        "APP_CONFIG_CACHE": "/tmp/config.php",
        "APP_EVENTS_CACHE": "/tmp/events.php",
        "APP_PACKAGES_CACHE": "/tmp/packages.php",
        "APP_ROUTES_CACHE": "/tmp/routes.php",
        "APP_SERVICES_CACHE": "/tmp/services.php",
        "VIEW_COMPILED_PATH": "/tmp",
        "CACHE_DRIVER": "array",
        "LOG_CHANNEL": "stderr",
        "SESSION_DRIVER": "cookie"
    },
    "build": {
        "scripts": {
            "build": "cd resources/js && npm install && npm run build"
        }
    }
}
